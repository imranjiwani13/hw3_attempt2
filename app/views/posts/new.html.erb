<h1>New Post for <%= @place.name %></h1>

<%= form_with(model: [@place, @post], local: true) do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>

  <%= form.label :description %>
  <%= form.text_area :description %>

  <%= form.label :date %>
  <%= form.date_field :date %>

  <%= form.submit %>
<% end %>

